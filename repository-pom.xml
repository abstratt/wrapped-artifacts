<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.abstratt.wrapped</groupId>
	<artifactId>com.abstratt.wrapped.repository</artifactId>
	<version>3.0</version>
	<packaging>eclipse-repository</packaging>
	<parent>
		<artifactId>master</artifactId>
		<groupId>com.abstratt</groupId>
		<version>1.6</version>
	</parent>
	
	<repositories>
		<repository>
			<id>Abstratt-OSS</id>
			<name>Abstratt OSS Repo</name>
			<url>http://repository-textuml.forge.cloudbees.com/snapshot/</url>
			<layout>default</layout>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
			</snapshots>
		</repository>
	</repositories>
	
	<!-- 3rd-party POM-first dependencies for modules -->
	<dependencies>
		<dependency>
			<groupId>com.abstratt.wrapped</groupId>
			<artifactId>postgresql</artifactId>
			<version>3.0</version>
		</dependency>
		<dependency>
			<groupId>com.abstratt.wrapped</groupId>
			<artifactId>schemacrawler</artifactId>
			<version>3.0</version>
		</dependency>		
	</dependencies>	
	
		<build>
		<plugins>
		</plugins>
		<pluginManagement>
		    <plugins>
                <plugin>
                    <groupId>org.eclipse.tycho</groupId>
                    <artifactId>tycho-compiler-plugin</artifactId>
                    <version>${tycho-version}</version>
                    <configuration>
                        <source>1.8</source>
                        <target>1.8</target>
                    </configuration>
                </plugin>		    
		    </plugins>
	    </pluginManagement>
	</build>
	
</project>
